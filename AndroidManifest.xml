        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mainViews.HomeScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.listview.PayMentActivity" >
        </activity>
        <activity
            android:name="com.example.listview.ListViewActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
